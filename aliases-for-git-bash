alias git-log='git log --decorate --oneline --graph'
alias glog='git-log'
alias gloga='glog --all'
alias git-log-remote='git-log --remotes --branches'
alias glr='git-log-remote'
alias git-log-remote-20='git-log-remote --max-count=20'
alias glr20='git-log-remote-20'
alias git-log-remote-40='git-log-remote --max-count=40'
alias glr40='git-log-remote-40'
alias git-log-remote-today='git-log-remote --since=yesterday'
alias glrt='git-log-remote-today'

alias gco='git checkout'
alias gcB='gco -B'
alias gcb='gco -b'
alias gcd='gco $(git_develop_branch)'
alias gcm='gco $(git_main_branch)'
alias gcor='gco --recurse-submodules'

alias gc='git commit --verbose'
alias gca='gc --all'
alias 'gca!'='gca --amend'

alias gd='git diff'
alias gds='gd --staged'
alias gdca='gd --cached'

alias gst='git status'

alias ga='git add'
alias gaa='ga --all'

alias gp='git push'
alias gpf='gp --force-with-lease --force-if-includes'
alias 'gpf!'='gp --force'

alias grb='git rebase'
alias grba='grb --abort'
alias grbc='grb --continue'
alias grbd='grb $(git_develop_branch)'
alias grbi='grb --interactive'
alias grbm='grb $(git_main_branch)'
alias grbo='grb --onto'
alias grbom='grb origin/$(git_main_branch)'
alias grbs='grb --skip'
alias grbum='grb upstream/$(git_main_branch)'
